<Window x:Class="Platformer.Windows.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platformer.Windows"
        mc:Ignorable="d"
        Title="PauseWindow"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None"
        Height="338" Width="527">
    <Border BorderBrush="#fdcb66" BorderThickness="7">
        <StackPanel Background="#d54e17">
            <TextBlock FontFamily="../Fonts/#Minecraft Seven Cyrillic (russian)" Foreground="Black" 
                       TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="72" >
                Pause
            </TextBlock>
            <Button Style="{DynamicResource ButtonStyle1}" Content="Continue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="75" Width="300"
                    Margin="0 20 0 0" Click='ContinueButtonCallback'/>
            <Button Style="{DynamicResource ButtonStyle1}" Content="Exit" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="75" Width="300"
                    Margin="0 20 0 0" Click="ExitButtonCallback"/>
        </StackPanel>
    </Border>
</Window>
